<% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %><br>
  <br>

<h1>Sign In!</h1>
<div class="user_profile">
<%= form_for(:session, url: sessions_path) do |f| %>
<%= f.label :user_name %>
<%= f.text_field :user_name %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.submit "Login", :class => 'button' %>
<% end %>
</div>
